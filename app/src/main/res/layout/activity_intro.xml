<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:drawSelectorOnTop="true"
            android:popupBackground="@drawable/popupmenu_bg"
            android:textColor="@color/primary_txt_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignLeft="@id/spinner"
            android:layout_alignRight="@id/spinner"
            android:layout_below="@id/spinner"
            android:background="@color/secondary_txt_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/select_category_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/order_btn"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onCategorySelected"
            android:padding="15dp"
            android:text="@string/next"
            android:textAlignment="gravity"
            android:textColor="@color/white" />


    </RelativeLayout>

</layout>